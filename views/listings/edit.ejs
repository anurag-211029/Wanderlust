<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
                <h3 class="mt-4 mb-4">Edit Listing</h3>
                <form method="post" novalidate class="needs-validation" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
                    <div class="mt-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" class="form-control" required name="listing[title]" value="<%= listing.title %>">
                        <div class="valid-feedback">
                            Title looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid title
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="listing[description]" required class="form-control" rows="10" cols="40"><%= listing.description %></textarea>
                        <div class="valid-feedback">
                            Description looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid Description
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="image" class="form-label">Previously Uploaded Image :</label><br>
                        <img src="<%= originalImageUrl %>"/>
                    </div>
                    <div class="mt-3">
                        <label for="image" class="form-label">Upload New Image :</label>
                        <input type="file" class="form-control" name="listing[image]">
                        <div class="valid-feedback">
                            Success
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid Link
                        </div>
                    </div>
                    <div class="row">
                        <div class="mt-3 col-md-4">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" required class="form-control" name="listing[price]" value="<%= listing.price %>">
                            <div class="valid-feedback">
                                Success
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid Price
                            </div>
                        </div>
                        <div class="mt-3 col-md-8">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" required class="form-control" name="listing[country]" value="<%= listing.country %>">
                            <div class="valid-feedback">
                                Success
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid Country
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text"  required class="form-control" name="listing[location]" value="<%= listing.location %>">
                        <div class="valid-feedback">
                            Success
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid location
                        </div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-4 mb-4">SUBMIT</button>
                </form>
        </div>
    </div>
</body>